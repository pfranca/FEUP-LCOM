	void* address = vg_init(0x105);

	int row, col;

	for(row = (384+y)-(size/2); row < (384+y)+(size/2); row++){
		for(col= (512+x)-(size/2); col < (512+x)+(size/2); col++){
			vg_draw_pixel(col,row,color);
		}
	}


	//TODO:interrupts keyboard para sair
	sleep(3);

	vg_exit();



	return 0;
	
}

