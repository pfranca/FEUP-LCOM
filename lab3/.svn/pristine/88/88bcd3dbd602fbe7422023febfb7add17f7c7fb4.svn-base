int kbd_test_scan(unsigned short ass) {
	if(ass==0){
		int irq_set=kbc_subscribe_int();
		int ipc_status;
		message msg;
		int r;
		unsigned long scancode;

		if(irq_set>=0){
			irq_set=BIT(irq_set);
		} else {
			printf("Error in kbd_test_scan::kbc_subscribe_int()\n");
			return 1;
		}

		while(scancode!=81) { //MUDAR CONDIÃ‡AO
			/* Get a request message. */
			if ( (r = driver_receive(ANY, &msg, &ipc_status)) != 0 ) {
				printf("driver_receive failed with: %d", r);
				continue;
			}
			if (is_ipc_notify(ipc_status)) { /* received notification */
				switch (_ENDPOINT_P(msg.m_source)) {
				case HARDWARE: /* hardware interrupt notification */
					if (msg.NOTIFY_ARG & irq_set) { /* subscribed interrupt */

						scancode=kbc_int_handler();
						printf("ScanCode: 0x%x\n",scancode);
						}
					break;
				default:
					break; /* no other notifications expected: do nothing */
				}
			} else { /* received a standard message, not a notification */
					/* no standard messages expected: do nothing */
			}
		}

		//Unsubscribe timer 0 interrupts
		if(kbc_unsubscribe_int()){
			printf("Unsubscribe failed\n");
			return 1;
		}
	}

		return 0;

	}



